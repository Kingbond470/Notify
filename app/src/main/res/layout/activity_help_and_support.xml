<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        tools:context=".ui.helpandsupport.HelpAndSupportActivity">


        <RelativeLayout
            android:id="@+id/relativeLayoutHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/navigation_color"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ibProfileBackHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto"
                android:text="Help and Support"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutHelp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/app_background"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="20dp"
                            app:cardBackgroundColor="@color/app_background"
                            app:cardCornerRadius="12dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15dp">

                                <ImageView
                                    android:id="@+id/iv_warning"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_above="@id/operations"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_warning" />

                                <TextView
                                    android:id="@+id/tv_dear_customer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_toRightOf="@+id/iv_warning"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="3"
                                    android:paddingLeft="10dp"
                                    android:text="Dear Customer,\nDue to the unprecedented spike of COVID-19 cases across the country, our COntact Centre"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/operations"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_dear_customer"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="1"
                                    android:text="operations have been impacted."
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/we_are"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_dear_customer"
                                    android:layout_toRightOf="@id/operations"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="1"
                                    android:text=" We are therefore"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/compelled"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/operations"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="1"
                                    android:text="compelled to halt our operations till the situation"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/normalizes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/compelled"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="1"
                                    android:text="normalizes."
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/however"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/compelled"
                                    android:layout_toRightOf="@+id/normalizes"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="1"
                                    android:text=" However, we would continue to provide"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/support_for"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/normalizes"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="1"
                                    android:text="support for your concerns over Emails."
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/Though"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/support_for"
                                    android:layout_marginVertical="20dp"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="4"
                                    android:text="Though our endeavor would be to respond as quickly as\npossible, but please do allow us to revert in 24-48 hours.\nFor any further assistance please feel free to reach out to\nus via below mentioned options."
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/dipatch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/Though"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="1"
                                    android:text="Dispatch of orders from our end as well as Deliveries"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/have"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/dipatch"
                                    android:fontFamily="@font/roboto_light"
                                    android:lines="3"
                                    android:text="have also been severly hampered during the last few weeks and may continue for some more time. As such, we seek your cooperation in alowing us time extensions."
                                    android:textColor="@color/white" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/navigation_color"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_packers_help"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_warning" />

                                <TextView
                                    android:id="@+id/tv_packers_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_packers_help"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="COVID Policy"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_manage_your_order"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_home_icon" />

                                <TextView
                                    android:id="@+id/tv_manage_order"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_manage_your_order"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="Events"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_warehouses_help"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_home_completed" />

                                <TextView
                                    android:id="@+id/tv_warehouses_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_warehouses_help"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="Goal"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_ride_help"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_google_logo" />

                                <TextView
                                    android:id="@+id/tv_ride_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_ride_help"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="Task"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_appissue_help"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/issue1" />

                                <TextView
                                    android:id="@+id/tv_appissue_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_appissue_help"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="App Issues"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_coupon_help"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/coupon_icon" />

                                <TextView
                                    android:id="@+id/tv_coupon_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_coupon_help"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="Coupons"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_subscription_help"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/subscription1" />

                                <TextView
                                    android:id="@+id/tv_subscription_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_subscription_help"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="Subscription"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_account_help"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/settings2" />

                                <TextView
                                    android:id="@+id/tv_account_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_account_help"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="Settings"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_payment_help"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/refund1" />

                                <TextView
                                    android:id="@+id/tv_payment_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_payment_help"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="Payment and Refunds"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="1dp"
                            app:cardBackgroundColor="@color/light_grey"
                            app:cardCornerRadius="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@color/app_background"
                                android:padding="8dp">


                                <ImageView
                                    android:id="@+id/iv_security_help"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@drawable/ic_security" />

                                <TextView
                                    android:id="@+id/tv_security_help"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_toRightOf="@id/iv_security_help"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="Security"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>

            </ScrollView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="20dp"
                android:clickable="true"
                android:elevation="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="100dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="2dp"
                    android:clickable="true"
                    android:elevation="20dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/virtual_assistant" />

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </FrameLayout>


    </RelativeLayout>
</layout>