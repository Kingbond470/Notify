<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.goal.GoalActivity">

        <LinearLayout
            android:id="@+id/setGoalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/goalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter the title name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="description"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/goalDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter the description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="To"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addToDateGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2E8EF"
                android:padding="10dp"
                android:paddingVertical="10dp"
                android:text="2021-12-19"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="From"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addFromDateGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2E8EF"
                android:padding="10dp"
                android:paddingVertical="10dp"
                android:text="2021-12-19"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/addTaskInGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setGoalDetails"
            android:background="@color/app_background"
            android:drawableEnd="@drawable/ic_baseline_add_24"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Add"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/addTaskInGoal"
            android:id="@+id/idGoalTaskAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/app_background"
            android:gravity="center"
            android:padding="10dp"
            android:text="submit"
            app:cornerRadius="16dp" />


    </RelativeLayout>
</layout>
