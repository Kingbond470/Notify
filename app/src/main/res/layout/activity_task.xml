<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/app_background_navy_blue"
        android:layout_height="match_parent"
        tools:context=".ui.task.TaskActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TaskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle"
                android:hint="enter the title name"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Description"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle"
                android:hint="enter the description"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Date and Time"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/addToDateTask"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/ic_baseline_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rectangle"
                    android:padding="15dp"
                    android:paddingVertical="10dp"
                    android:text="Set Date"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:drawableRight="@drawable/ic_baseline_access_time"
                    android:layout_weight="1"
                    android:id="@+id/addTimeTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rectangle"
                    android:padding="15dp"
                    android:paddingVertical="10dp"
                    android:text="Set Time"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>




        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_rectangle"
            android:gravity="center"
            android:padding="10dp"
            android:text="submit"
            android:textColor="@color/white"/>

    </RelativeLayout>
</layout>
