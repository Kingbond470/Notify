<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.login.LoginActivity">

        <ImageView
            android:id="@+id/ivLoginMoveOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/splash_logo" />

        <TextView
            android:id="@+id/tvLoginHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLoginMoveOn"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Notify"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="normal" />


        <androidx.cardview.widget.CardView
            android:id="@+id/signUpLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLoginHeading"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="150dp"
            app:cardCornerRadius="12dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLoginHeading"
                android:background="@color/button_fill_bg_color"
                android:fontFamily="@font/roboto"
                android:paddingHorizontal="10dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSignInWithGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpLogin"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp">

            <Button
                android:id="@+id/btnSignUpWithGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_background_black"
                android:drawableLeft="@drawable/ic_google_logo"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto"
                android:paddingHorizontal="10dp"
                android:text="Continue with Google"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSignInWithFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSignInWithGoogle"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_background_black"
                android:drawableLeft="@drawable/ic_facebook_logo"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto"
                android:paddingHorizontal="10dp"
                android:text="Continue with Facebook"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSignInWithFacebook"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
</layout>